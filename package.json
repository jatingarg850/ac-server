{
  "name": "ac-wallah-server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "node verify-build.js",
    "verify": "node --input-type=module -e \"import { readFile } from 'fs/promises'; const pkg = JSON.parse(await readFile('./package.json')); process.exit(pkg.type === 'module' ? 0 : 1);\"",
    "prod": "pm2 start ecosystem.config.cjs --env production",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "jsonwebtoken": "9.0.2",
    "pg": "8.11.3",
    "pm2": "5.3.0"
  },
  "devDependencies": {
    "nodemon": "3.0.2"
  }
}
